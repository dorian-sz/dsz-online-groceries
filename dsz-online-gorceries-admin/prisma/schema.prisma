generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}


model Category{
  id String @id @default(uuid())
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products Product[]
}

model Offer{
  id String @id @default(uuid())
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products Product[]
}

model Product{
  id String @id @default(uuid())
  name String
  price Decimal
  image String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  categories Category[]
  offers Offer[]
}